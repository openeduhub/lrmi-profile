{
    "$id": "https://raw.githubusercontent.com/dini-ag-kim/lrmi-profile/oeh-schem/draft/schemas/oeh-schema/about.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Subject",
    "description": "Das Thema der Lernressource, basierend auf der Fächersystematik des OpenEduHub",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Concept"
          ]
        },
        "id": {
          "type": "string",
          "format": "uri",
          "pattern": "^https:\/\/w3id.org\/openeduhub\/vocabs\/discipline\/.*"
        },
        "inScheme": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "enum": [
                "https://w3id.org/openeduhub/vocabs/discipline/index.json"
              ]
            }
          }
        },
        "prefLabel": {
          "title": "Die bevorzugte Bezeichnung des Konzepts",
          "description": "Der 'localized string' für das 'prefLabel' des SKOS-Konzepts",
          "$ref": "https://raw.githubusercontent.com/dini-ag-kim/lrmi-profile/oeh-schem/draft/schemas/oeh-schema/LocalizedString.json"
        }
      },
      "required": [
        "id"
      ],
      "_widget": "SkohubLookup"
    }
  }
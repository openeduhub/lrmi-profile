{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OER",
  "description": "OpenEduHub JSON schema zur Beschreibung von Open Educational Resources mit schema.org",
  "type": "object",
  "properties": {
    "url": {
      "$ref": "https://raw.githubusercontent.com/openeduhub/lrmi-profile/wlo-schema/draft/schemas/url.json"
    },
    "name": {
      "$ref": "https://raw.githubusercontent.com/openeduhub/lrmi-profile/wlo-schema/draft/schemas/name.json"
    },
    "description": {
      "$ref": "https://raw.githubusercontent.com/openeduhub/lrmi-profile/wlo-schema/draft/schemas/description.json"
    },
    "discipline": {
      "$ref": "https://raw.githubusercontent.com/openeduhub/lrmi-profile/wlo-schema/draft/schemas/discipline.json"
    },
    "learningResourceType": {
      "$ref": "https://raw.githubusercontent.com/openeduhub/lrmi-profile/wlo-schema/draft/schemas/learningResourceType.json"
    },
    "license": {
      "$ref": "https://raw.githubusercontent.com/openeduhub/lrmi-profile/wlo-schema/draft/schemas/license.json"
    },
    "creator": {
      "$ref": "https://raw.githubusercontent.com/openeduhub/lrmi-profile/wlo-schema/draft/schemas/creator.json"
    },
    "email":{
      "$ref":"https://raw.githubusercontent.com/openeduhub/lrmi-profile/wlo-schema/draft/schemas/email.json"
    }
  },
  "required": [
    "url",
    "title"
  ]
}
